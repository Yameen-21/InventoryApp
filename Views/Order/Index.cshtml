@model IEnumerable<InventoryApp.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}
<h3 class="mb-4">My Orders</h3>

@if (!Model.Any())
{
    <p class="text-secondary">No orders yet. <a asp-controller="Home" asp-action="Index" class="text-info">Shop now</a>.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Ordered On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Product?.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Product?.Price.ToString("N0")</td>
                        <td>@(item.Product?.Price * item.Quantity ?? 0).ToString("N0")</td>
                        <td>
                            @if (item.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (item.Status == "Shipped")
                            {
                                <span class="badge bg-info text-dark">Shipped</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                        </td>
                        <td>@item.OrderedAt.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
