@model IEnumerable<InventoryApp.Models.Product>
@{
    ViewData["Title"] = "Shop";
}
<h3 class="mb-3">Available Products</h3>

<form method="get" class="input-group mb-3">
    <input class="form-control" type="text" name="search" placeholder="Search products..." />
    <button class="btn btn-primary" type="submit">Search</button>
</form>

@if (!Model.Any())
{
    <p class="text-secondary">No products yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>In Stock</th>
                    <th>Added</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Category</td>
                        <td>@p.Price.ToString("N0")</td>
                        <td>@p.Quantity</td>
                        <td>@p.CreatedAt.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (p.Quantity > 0)
                            {
                                <a class="btn btn-sm btn-primary" asp-controller="Order" asp-action="Create" asp-route-id="@p.Id">Order</a>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Out of stock</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
